<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">


  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.css"
    integrity="sha512-nNlU0WK2QfKsuEmdcTwkeh+lhGs6uyOxuUs+n+0oXSYDok5qy0EI0lt01ZynHq6+p/tbgpZ7P+yUb+r71wqdXg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <link rel="stylesheet" href="/css/style.css">

  <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>

  <script
    src="https://www.paypal.com/sdk/js?client-id=Af5LQWw_N9oUFe4VLIsvm67VNLceNgyZ9zIBDstZYTElWwK_fS4UJfrxAdcxXGuADj1YX-SavryHVlmq&currency=USD"></script>


  <title>
    <%= title %>
  </title>


</head>

<body>
  <div class="ajaxbg">
    <div class="ajaxinner">
      <h5>YOU ARE NOW BEING REDIRECTED TO PAYPAL</h5>
      <img src="/images/ajax-loader-gif.gif" alt="">

    </div>
  </div>

  <nav class="navbar navbar-expand-lg bg-secondary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/" target="_blank">Shopper</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav d-flex justify-content-center gap-3">
          <% pages.forEach((page)=>{%>
            <% if (page.slug=="home" ) {%>
              <li><a class="text-white" href="/">
                  <%= page.title %>
                </a></li>
              <%}else {%>
                <li><a class="text-white" href="/<%= page.slug %>">
                    <%= page.title %>
                  </a></li>
                <%} %>
                  <%}) %>
        </ul>

        <ul class=" navbar-nav d-flex justify-content-center gap-3 navbar-nav ms-auto">
          <li>
            <a class="text-white" id="blog" href="/cart/checkout">My Cart(
              <% if(typeof cart !=="undefined" ) { %>
                <%= cart.length %>
                  <% }else { %>
                    0
                    <% } %>
                      )
            </a>
          </li>
          <% if (user) {  %>
            <li><a class="text-white" href="/users/logout"> Hi,
              <%= user.username %> ( Logout )</a></li>
        
              <% }else { %>

            <li><a class="text-white" href="/users/register">Register</a></li>
            <li><a class="text-white" href="/users/login">Login</a></li>
            <% } %>

            <% if (user && user.admin == 1) {  %>
              <li><a class="text-white" href="/admin/pages"> Admin Area</a></li>
          
                <% } %>

        </ul>
      </div>
    </div>
  </nav>


  <div class="container">
    <br>
    <%- messages('messages', locals) %>

      <% if (errors) {%>
        <% errors.forEach((errors)=>{ %>
          <div class=" alert alert-danger">
            <%= errors.msg %>
          </div>
          <% }) %>
            <% } %>



              <div class="row">
                <div class="col-12 col-md-3">
                  <h3>Categories</h3>
                  <ul class="list-group">
                    <li class="list-group-item"><a href="/products">All Products</a></li>

                    <% categories.forEach(function(c) { %>

                      <li class="list-group-item"><a href="/products/<%= c.slug %>">
                          <%= c.title %>
                        </a></li>
                      <% }) %>
                  </ul>
                </div>
                <div class="col-12 col-md 1"></div>
                <div class="col-12 col-md-8">